<ShiftScreen>:
    RecycleView:
        viewclass: 'DailyShift'
        id: shiftScreen
        RecycleBoxLayout:
            default_size: None, dp(200)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
    Button:
        pos_hint:{"x":0.1,'bottom': 1}
        size_hint: 0.4, 0.1
        font_size: (root.width**2 + root.height**2) / 17**4
        text: "Sluzbe"
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'service'
            root.serviceBtn()
    Button:
        pos_hint:{"x":0.5,'bottom': 1}
        size_hint: 0.4, 0.1
        font_size: (root.width**2 + root.height**2) / 17**4
        text: 'Logout'
        on_release:
            root.manager.transition.direction = 'up'
            root.manager.current = 'login'

<UpdatePopup>:
    auto_dismiss: True
	title: "Status"
	size_hint: 0.6, 0.2
	pos_hint: {'x': 0.2, 'top': 0.7}
	text: 'Trazenje linkova'
	Label:
		id: popupMsg
		text: root.text
			

<LoginScreen>:
    FloatLayout:
        Label:
			pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.4, 0.1
			font_size: (root.width**2 + root.height**2) / 17**4
            text:"Sluzbeni broj: "
			
        TextInput:
			pos_hint: {"x": 0.3 , "top":0.8}
			size_hint: 0.4, 0.1
			font_size: (root.width**2 + root.height**2) / 17**4
            id: offNum
            text: '2621'
            multiline: False
			
		Label:
			pos_hint: {"x":0.3, "top":0.5}
            size_hint: 0.4, 0.1
			font_size: (root.width**2 + root.height**2) / 17**4
			id: warning
            text:""
			color: 0.96,0.74,0,1

        Button:
            pos_hint:{"x":0.1,'bottom': 1}
			size_hint: 0.4, 0.1
			font_size: (root.width**2 + root.height**2) / 17**4
            text: "Prijavi se"
            on_release:
                root.manager.transition.direction = 'down'
                root.manager.current = 'service'
                root.loginBtn()
		Button:
            pos_hint:{"x":0.5,'bottom': 1}
			size_hint: 0.4, 0.1
			font_size: (root.width**2 + root.height**2) / 17**4
            text: "Azuriraj"
            on_release:
                root.updateBtn()
				
			