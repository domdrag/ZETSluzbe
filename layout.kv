#:import Clipboard kivy.core.clipboard.Clipboard

<CallInfoPromptPopup>:
    auto_dismiss: True
	title: "Kolega"
	size_hint: 0.6, 0.6
	pos_hint: {'x': 0.2, 'top': 0.7}
	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			Label:
				id: name
				text: root.name
			Button:
				size_hint: 0.5, 0.5
				pos_hint: {'center_x':0.5, 'center_y':0.5}
				text: "Kopiraj"
				on_release: root.copyNameOnClipboard()
		BoxLayout:
			Label:
				id: phoneNumber
				text: root.phoneNumber
			Button:
				size_hint: 0.5, 0.5
				pos_hint: {'center_x':0.5, 'center_y':0.5}
				text: "Kopiraj"
				on_release: root.copyPhoneNumberOnClipboard()
		Button:
			text: "Nazovi"
			on_release: root.callNumber()
		Button:
			text: 'Spremi u imenik'
			on_release: root.saveContact()
			
<BackgroundColor@Widget>
    background_color: .5, .5, .5, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<SpecialLabel@Label+BackgroundColor>
	
<DailyShiftOld>:
    day: ''
    firstShift: ''
    secondShift: ''
    thirdShift: ''
	sizeHint: (1, 1) ### pokusaj micanja labela u shiftovima, trentuno useless
	bg_color: (0,0,0,0) 
    GridLayout:
        rows: 2
        Label:
			size_hint: 1, .25
            text: root.day
        GridLayout:
            rows: 3
			size_hint: 1, .75
			SpecialLabel:
				background_color: root.bg_color
				size_hint: root.sizeHint
				color: 1, 1, 1, 1
				halign: 'center'
				text: root.firstShift
				canvas.before:
					Color:
						rgba: .5, .5, .5, 1
					Line:
						width: 2
						rectangle: self.x, self.y, self.width, self.height
            SpecialLabel:
				background_color: root.bg_color
				color: 1, 1, 1, 1
				halign: 'center'
				text: root.secondShift
				canvas.before:
					Color:
						rgba: .5, .5, .5, 1
					Line:
						width: 2
						rectangle: self.x, self.y, self.width, self.height
            SpecialLabel:
				background_color: root.bg_color
				size_hint: root.sizeHint
				color: 1, 1, 1, 1
				halign: 'center'
				text: root.thirdShift
				canvas.before:
					Color:
						rgba: .5, .5, .5, 1
					Line:
						width: 2
						rectangle: self.x, self.y, self.width, self.height

<DailyService>:
    day: ''
    service: ''
	bg_color: (0,0,0,0)
    GridLayout:
        rows: 2
        Label:
            text: root.day
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
        SpecialLabel:
			readonly: True
			background_color: root.bg_color
			color: 1, 1, 1, 1
            halign: 'center'
            text: root.service
            canvas.after:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
					
<DailyShift>:
    firstItem: '' ### dan ili sluzba
	firstDriver: ''
    secondItem: '' ### sluzba
	secondDriver: ''
	bg_color1: (0,0,0,0)
	bg_color2: (0,0,0,0)
	GridLayout:
		rows: 2
		columns: 2
		SpecialLabel:
			background_color: root.bg_color1
			text: root.firstItem
			color: 1, 1, 1, 1
			halign: 'center'
			canvas.after:
				Color:
					rgba: .5, .5, .5, 1
				Line:
					width: 2
					rectangle: self.x, self.y, self.width, self.height
		Button:
			size_hint: 0.35, 0.5
			text: root.firstDriver
			halign: 'center'
			background_color: root.bg_color1
			font_size: (root.width**2 + root.height**2) / 16**4
			on_release:
				root.createCallInfoPrompt(self.text)
		SpecialLabel:
			background_color: root.bg_color2
			color: 1, 1, 1, 1
			halign: 'center'
			text: root.secondItem
			canvas.after:
				Color:
					rgba: .5, .5, .5, 1
				Line:
					width: 2
					rectangle: self.x, self.y, self.width, self.height
		Button:
			size_hint: 0.35, 0.5
			text: root.secondDriver
			background_color: root.bg_color2
			halign: 'center'
			font_size: (root.width**2 + root.height**2) / 16**4
			on_release:
				root.createCallInfoPrompt(self.text)
                

<ServiceScreen>:
    RecycleView:
        viewclass: 'DailyService'
        id: serviceScreen
        RecycleBoxLayout:
            default_size: None, dp(200)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
    Button:
        pos_hint:{"x":0.1,'bottom': 1}
        size_hint: 0.4, 0.1
        font_size: (root.width**2 + root.height**2) / 17**4
        text: "Smjena"
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = 'service'
            root.shiftBtn()
    Button:
        pos_hint:{"x":0.5,'bottom': 1}
        size_hint: 0.4, 0.1
        font_size: (root.width**2 + root.height**2) / 17**4
        text: 'Odjavi se'
        on_release:
            root.manager.transition.direction = 'up'
            root.manager.current = 'login'
			
