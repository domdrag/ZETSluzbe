<LoginScreenDesign@Widget>
	halign: 'center'
	valign: 'center'
	font_size: root.fontSize #'13dp'
	text_size: self.width/1.05, None # idk how, but this works
	text_color: 'white'
	theme_text_color: 'Custom'
	md_bg_color: app.theme_cls.primary_dark
	
<LoginScreenLabel@MDLabel+LoginScreenDesign>
	
<LoginScreenButton@MDRaisedButton+LoginScreenDesign>
	md_bg_color: app.theme_cls.primary_color
	
<LoginScreenTextField@MDTextField+LoginScreenDesign>
	halign: 'left'
	multiline: False
	color_mode: 'accent'
	line_color_normal: 'black'
	text_color_normal: 'black'
	line_color_focus: 'white'
	text_color_focus: 'white'
	
<LoginScreenSlider@MDSlider+LoginScreenDesign>
	orientation: 'vertical'
	color: 'white'
	value: root.fontSize
	min: 10
	max: 30