<LoginDesign@Widget>
	halign: 'center'
	valign: 'center'
	font_size: '13dp'
	text_size: self.width/1.05, None # idk how, but this works
	text_color: 'white'
	md_bg_color: app.theme_cls.primary_dark
	
<LoginLabel@MDLabel+LoginDesign>
	
<LoginButton@MDFillRoundFlatButton+LoginDesign>
	md_bg_color: app.theme_cls.primary_color
	
<LoginTextField@MDTextField+LoginDesign>
	halign: 'left'
	multiline: False
	color_mode: 'accent'
	line_color_normal: 'black'
	text_color_normal: 'black'
	line_color_focus: 'white'
	text_color_focus: 'white'
	