<MainCanvasAfter@Widget>
	canvas.after:
		Color:
			rgba: app.theme_cls.accent_color
		Line:
			width: 1
			rectangle: self.x, self.y, self.width, self.height

<LoginScreenDesign@MainCanvasAfter+Widget>
	halign: 'center'
	valign: 'center'
	font_size: app.fontSize 
	text_size: self.width/1.05, self.height/1.05 # idk how, but this works
	text_color: 'white'
	theme_text_color: 'Custom'
	md_bg_color: app.theme_cls.primary_dark
	
<LoginScreenLabel@MDLabel+LoginScreenDesign>
	
<LoginScreenButton@MDRaisedButton+LoginScreenDesign>
	md_bg_color: app.theme_cls.primary_color
	
<LoginScreenTextField@MDTextField+LoginScreenDesign>
	halign: 'left'
	multiline: False
	color_mode: 'accent'
	line_color_normal: 'black'
	text_color_normal: 'black'
	line_color_focus: 'white'
	text_color_focus: 'white'
	
<LoginScreenSlider@MDSlider+LoginScreenDesign>
	orientation: 'horizontal'
	color: 'white'
	value: int(app.fontSize[:-2]) 
	min: 10
	max: 30