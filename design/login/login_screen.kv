#:include design/login/utils/update_dialog.kv
#:include design/login/login_design.kv

<LoginScreen>:
	name: 'loginScreen'
	offNumTextInput: offNumTextInputId
	
    MDFloatLayout:
		md_bg_color: app.theme_cls.primary_dark

        LoginLabel:
			pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.4, 0.1
            text: "Sluzbeni broj: "
			
        LoginTextField:
			pos_hint: {"x": 0.4, "top": 0.8}
			size_hint_x: 0.2
            id: offNumTextInputId
            text: '2621'
			
		LoginLabel:
			pos_hint: {"x":0.1, "top":0.5}
            size_hint: 0.8, 0.1
            text: root.warningMessage
			color: root.warningMessageColor

        LoginButton:
            pos_hint:{"x":0.1,'bottom': 1}
			size_hint: 0.4, 0.1
            text: 'Prijavi se'
            on_release: root.loginButton()
					
		LoginButton:
            pos_hint:{"x":0.5,'bottom': 1}
			size_hint: 0.4, 0.1
            text: 'Azuriraj'
            on_release: root.updateButton()