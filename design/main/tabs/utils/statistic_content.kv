
<StatisticContent@MDBoxLayout>:
    statisticContentItem: ''
	statisticContentValue: ''
	neighboursCount: 1
	
	
	MDGridLayout:
		cols: 2
		rows: 1
		
		MainLabelWithBorder:
			id: statisticContentItemId
			text: root.statisticContentItem
			text_size: None, self.height
			
		MainLabelWithBorder:
			id: statisticContentValueId
			text: root.statisticContentValue
			size_hint_x: 0.35