#:include design/main/main_screen_design.kv

<CallInfoWidget>:
	height: dp(100) # WORKAROUND, content doesn't show well unless height is fixed
	size_hint_y: None

	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			CallInfoLabel:
				id: nameId
				text: root.driverName
				font_size: '15dp'
				
			IconRightWidget:
				halign: 'left'
				icon: 'content-copy'
				on_release: root.copyNameOnClipboard()
		BoxLayout:
			CallInfoLabel:
				id: phoneNumberId
				text: root.driverPhoneNumber
				font_size: '15dp'
				
			MDIconButton:
				pos_hint: {'center_y': .5}
				icon: 'content-copy'
				on_release: root.copyPhoneNumberOnClipboard()
