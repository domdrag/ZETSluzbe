#:include design/main/tabs/utils/statistic_content.kv

<StatisticComponent@MainScreenDesign>:
    statisticTitle: ''
	statisticContentData: []

	MDGridLayout:
		cols: 2
		rows: 1
		
		MainLabelWithBorder:
			id: statisticTitleId
			size_hint_x: 1
			text: root.statisticTitle

		MDRecycleView:
			viewclass: 'StatisticContent'
			id: statisticContentRecycleViewId
			data: root.statisticContentData
			do_scroll_y: False
			do_scroll_x: False
			
			RecycleBoxLayout:
				default_size_hint: 1, 1
				orientation: 'vertical'
			
	
