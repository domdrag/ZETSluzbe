<MainCanvasAfter@Widget>
	canvas.after:
		Color:
			rgba: app.theme_cls.accent_color
		Line:
			width: 1
			rectangle: self.x, self.y, self.width, self.height
			
<MoinLay@RelativeLayout+MainCanvasAfter>
<MoinSwip@MDSwiper+MainCanvasAfter>
<MoinScatt@ScatterLayout+MainCanvasAfter>

<MainScreenDesign@Widget>
	halign: 'center'
	valign: 'center'
	font_size: app.mainScreenFontSize
	text_size: self.width, None
	text_color: 'white'
	md_bg_color: app.theme_cls.primary_dark

<MainRecycleView@MDRecycleView>
	RecycleBoxLayout:
		default_size: None, app.gridHeight
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'

<MainLabelWithBorder@MDLabel+MainScreenDesign+MainCanvasAfter>

# Statistics
<StatisticsDropDown@MDDropDownItem+MainScreenDesign>

# Shifts
<CallInfoButton@MDTextButton+MainScreenDesign+MainCanvasAfter>
<CallInfoLabel@MDLabel+MainScreenDesign>

# Calendar
<CalendarDayButton@Button+MainScreenDesign+MainCanvasAfter>
    background_normal: ''

# MDLabel not working for some reason (font not responding to change) (framework bug?)
<CalendarLabel@Label+MainScreenDesign>

<CalendarDaysGridLayout@MDGridLayout>
    cols: 7
    rows: 6
	size_hint: 1, 0.75
	
# Menu
<MenuItem@MDNavigationDrawerItem+MainScreenDesign>
	selected_color: 'white'
	
<MenuHeader@MDNavigationDrawerHeader+MainScreenDesign>
	padding: '12dp', 0, 0, '56dp'
	md_bg_color: app.theme_cls.primary_color
