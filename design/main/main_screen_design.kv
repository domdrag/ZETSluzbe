<MainCanvasAfter@Widget>
	canvas.after:
		Color:
			rgba: app.theme_cls.accent_color
		Line:
			width: 1
			rectangle: self.x, self.y, self.width, self.height

<MainScreenDesign@Widget>
	halign: 'center'
	valign: 'center'
	font_size: str(int(1/2*((int(app.gridHeight[:-2])//10) + 30 - abs((int(app.gridHeight[:-2])//10)-30)))) + 'dp'
	#font_size: self.font_size + ((1/2*(self.height - self.texture_size[1] + abs(self.height - self.texture_size[1]))) / (self.height - self.texture_size[1] + 0.001))*(int(app.gridHeight[:-2])//10 - self.font_size)
	text_size: self.width, self.height * 1.4
	text_color: 'white'
	md_bg_color: app.theme_cls.primary_dark
	
<CallInfoLabel@MDLabel+MainScreenDesign>

# service/day/stats label
<MainLabelWithBorder@MDLabel+MainScreenDesign+MainCanvasAfter>
	
<CallInfoButton@MDTextButton+MainScreenDesign+MainCanvasAfter> 

<MainRecycleView@MDRecycleView>:
	RecycleBoxLayout:
		#default_size: None, dp(200)
		default_size: None, app.gridHeight
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'

<MainScreenSlider@MDSlider>
	orientation: 'horizontal'
	color: 'white'
	value: int(app.fontSize[:-2]) 
	min: 10
	max: 30