# design
#:include design/main/main_screen_design.kv

# dialogs
#:include design/main/dialogs/calendar_dialog.kv
#:include design/main/dialogs/call_info_dialog.kv
#:include design/main/dialogs/links_dialog.kv
#:include design/main/dialogs/notifications_dialog.kv
#:include design/main/dialogs/service_dialog.kv

# share
#:include design/main/share/daily_service.kv
#:include design/main/share/main_menu.kv

# tabs
#:include design/main/tabs/services_tab.kv
#:include design/main/tabs/shifts_tab.kv
#:include design/main/tabs/statistics_tab.kv

<MainScreen>:
	name: 'mainScreen'
	servicesTab: servicesTabId
	shiftsTab: shiftsTabId
	statisticsTab: statisticsTabId
	mainMenu: mainMenuId

	MDBoxLayout:
		orientation: 'vertical'
		
		MDTopAppBar:
			orientation: 'horizontal'
			title: 'ZETSluzbe'
			anchor_title: 'left'
			
			MDIconButton:
				icon: 'menu'
				on_release: mainMenuId.set_state('open')
		
		MDTabs:
			tab_hint_x: True
			
			ServicesTab:
				id: servicesTabId
				
			ShiftsTab: 
				id: shiftsTabId
				
			StatisticsTab:
				id: statisticsTabId
				
	MDIconButton:
		icon: 'plus-box-outline'
		pos_hint: {"x":0, "top": 0.11}
		on_release: root.increaseGridHeight()
		
	MDIconButton:
		icon: 'minus-box-outline'
		on_release: root.decreaseGridHeight()
		
	MainMenu:
		id: mainMenuId
	
	
	
	
			