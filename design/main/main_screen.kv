<MainScreen>:
	name: 'mainScreen'
	mainScreenTabs: mainScreenTabsId
	servicesTab: servicesTabId
	shiftsTab: shiftsTabId
	statisticsTab: statisticsTabId

	MDBoxLayout:
		orientation: 'vertical'
		
		MDTopAppBar:
			orientation: 'horizontal'
			title: 'ZETSluzbe'
			anchor_title: 'left'
			
			MDIconButton:
				icon: 'calendar'
				on_release: root.calendarButton()
				
			MDIconButton:
				icon: 'logout'
				on_release: root.logoutButton()
		
		MDTabs:
			id: mainScreenTabsId
			tab_hint_x: True
			
			ServicesTab:
				id: servicesTabId
				
			ShiftsTab: 
				id: shiftsTabId
				
			StatisticsTab:
				id: statisticsTabId
				
	MDIconButton:
		icon: 'plus-box-outline'
		pos_hint: {"x":0, "top": 0.11}
		on_release: root.increaseGridHeight()
		
	MDIconButton:
		icon: 'minus-box-outline'
		on_release: root.decreaseGridHeight()
			
