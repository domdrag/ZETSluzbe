#:include design/screen/login/utils/update_popup.kv

<LoginScreen>:
	name: 'loginScreen'
	offNumTextInput: offNumTextInputId
	
    MDFloatLayout:
		md_bg_color: app.theme_cls.primary_dark

        ZETLabel:
			pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.4, 0.1
            text: "Sluzbeni broj: "
			
        ZETTextField:
			pos_hint: {"x": 0.3 , "top":0.85}
			size_hint_x: 0.4
			#size_hint: 0.4, 0.1
            id: offNumTextInputId
            text: '2545'
			
		ZETLabel:
			pos_hint: {"x":0.2, "top":0.5}
            size_hint: 0.6, 0.1
            text: root.warningMessage
			color: root.warningMessageColor

        ZETButton:
            pos_hint:{"x":0.1,'bottom': 1}
			size_hint: 0.4, 0.1
            text: 'Prijavi se'
            on_release: root.loginButton()
					
		ZETButton:
            pos_hint:{"x":0.5,'bottom': 1}
			size_hint: 0.4, 0.1
            text: 'Azuriraj'
            on_release: root.updateButton()