#:include design/screen/login/utils/update_popup.kv

<LoginScreen>:
	name: 'loginScreen'
	offNumTextInput: offNumTextInputId
	
    FloatLayout:
        Label:
			pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.4, 0.1
			font_size: "13dp"
			text_size: self.width/1.05, None
			halign: 'center'
            text: "Sluzbeni broj: "
			
        TextInput:
			pos_hint: {"x": 0.3 , "top":0.8}
			size_hint: 0.4, 0.1
			font_size: "13dp"
			text_size: self.width/1.05, None
            id: offNumTextInputId
            text: '2621'
            multiline: False
			
		Label:
			pos_hint: {"x":0.2, "top":0.5}
            size_hint: 0.6, 0.1
			font_size: "13dp"
			text_size: self.width/1.05, None
			halign: 'center'
            text: root.warningMessage
			color: root.warningMessageColor

        Button:
            pos_hint:{"x":0.1,'bottom': 1}
			size_hint: 0.4, 0.1
			font_size: "13dp"
			text_size: self.width/1.05, None
			halign: 'center'
            text: "Prijavi se"
            on_release: root.loginButton()
					
		Button:
            pos_hint:{"x":0.5,'bottom': 1}
			size_hint: 0.4, 0.1
			font_size: "13dp"
			text_size: self.width/1.05, None
			halign: 'center'
            text: "Azuriraj"
            on_release: root.updateButton()
			disabled: False