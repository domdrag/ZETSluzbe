#:include design/screen/share/special_label.kv

<DailyShift>:
    firstItem: '' ### day or service
	firstDriver: ''
    secondItem: '' ### service
	secondDriver: ''
	bg_color1: app.theme_cls.primary_dark
	bg_color2: app.theme_cls.primary_dark
	MDGridLayout:
		rows: 2
		columns: 2
		
		ZETLabelWithBorder:
			md_bg_color: root.bg_color1
			text: root.firstItem
					
		ZETTextButton:
			size_hint: 0.35, 0.5
			text: root.firstDriver
			#md_bg_color: root.bg_color1 # workaround - ako stavim boju stvara se random square
			on_release: root.callInfoButton(self.text)
			
		ZETLabelWithBorder:
			md_bg_color: root.bg_color2
			text: root.secondItem

		ZETTextButton:
			size_hint: 0.35, 0.5
			text: root.secondDriver
			#md_bg_color: root.bg_color2 # workaround
			on_release: root.callInfoButton(self.text)